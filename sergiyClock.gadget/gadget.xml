<?xml version="1.0" encoding="utf-8" ?>
<gadget>
  <name>Sergiy Clock</name>
  <version>1.0</version>
  <author name="Sergiy Egoshyn">
    <info url="https://github.com/sergiye"/>
    <logo src="images/icon.png"/>
  </author>
  <copyright>© 2023 Sergiy Egoshyn</copyright>
  <description>Digital clock gadget.</description>
  <icons>
    <icon height="48" src="images/icon.png" width="48"/>
  </icons>
  <hosts>
    <host name="sidebar">
      <base apiVersion="1.0.1" src="clock.html" type="HTML"/>
      <permissions>full</permissions>
      <platform minPlatformVersion="1.0"/>
      <defaultImage src="images/icon.png"/>
      <autoscaleDPI>true</autoscaleDPI>
    </host>
  </hosts>
</gadget>